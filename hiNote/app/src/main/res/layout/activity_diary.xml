<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".diary.DiaryActivity">

    <TextView
            android:text="DIARY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textColor="#F6E16E" android:textStyle="bold"
            android:textSize="34sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView" app:layout_constraintVertical_bias="0.056"
    />
    <Button
            android:layout_width="54dp"
            android:layout_height="47dp" android:id="@+id/registButton3"
            android:textStyle="bold" android:textSize="20sp"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView" app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintVertical_bias="0.058" app:icon="@android:drawable/ic_menu_edit"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="413dp"
            android:layout_height="616dp" tools:layout_editor_absoluteY="133dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/recyclerView" tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>