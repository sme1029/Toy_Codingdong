<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".diary.DiaryActivity">

    <ImageButton
            android:layout_width="58dp"
            android:layout_height="59dp"
            app:srcCompat="@drawable/img7"
            android:id="@+id/registButton"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"/>
    <ImageButton
            android:layout_width="69dp"
            android:layout_height="54dp"
            app:srcCompat="@drawable/img6"
            android:id="@+id/btnWeather"
            android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
    />
    <TextView
            android:text="DIARY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home"
            android:textColor="#F6E16E"
            android:textStyle="bold"
            android:textSize="34sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toEndOf="@+id/btnWeather"
            app:layout_constraintEnd_toStartOf="@+id/registButton"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="400dp"
            android:layout_height="550dp"
            android:id="@+id/recyclerView"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>