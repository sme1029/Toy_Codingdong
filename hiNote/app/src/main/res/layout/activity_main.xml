<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:text="currentUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentUser"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/btnLogout"
            app:layout_constraintHorizontal_bias="0.75"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="30dp"/>
    <ImageView
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:src="@drawable/hinote"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintTop_toBottomOf="@+id/diary"
    />
    <Button
            android:text="DIARY"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/diary"
            android:textStyle="bold"
            android:textSize="23sp"
            app:layout_constraintEnd_toStartOf="@+id/book"
            android:backgroundTint="#F6E16E"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <Button
            android:text="HOME"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/home"
            android:textStyle="bold"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="#F6E16E"
            app:layout_constraintEnd_toStartOf="@+id/diary"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="5dp"/>
    <Button
            android:text="REVIEW"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:id="@+id/book"
            android:textStyle="bold"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#F6E16E"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="5dp"/>
    <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/logout"
            android:id="@+id/btnLogout"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            tools:ignore="SpeakableTextPresentCheck"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>